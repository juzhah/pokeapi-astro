---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}
const { name, url, isBig } = Astro.props;

const pokemon_id = url.split("/").at(-2);

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokemon_id}.png`;
---

<a
  href=`/pokemons/${name}`
  class:list={[
    "bg-slate-700 rounded-2xl p-6 flex flex-col items-center",
    {
      border: isBig,
    },
  ]}
>
  <img
    transition:name={`${name}-image`}
    src={imageSrc}
    alt=`Official artwokr of ${name}`
    class:list={[
      {
        "w-26 h-25": isBig,
        "w-22 h-22": !isBig,
      },
    ]}
  />
  <span class="text-slate-300 capitalize">{name}</span>
</a>
